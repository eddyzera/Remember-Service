{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES6"],
    "rootDir": "./src",
    "typeRoots": [
      "./mode_modules/@types",
      "./src/@types"
    ],
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
